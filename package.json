{
  "name": "golden-lap-member-creator",
  "version": "1.1.3",
  "description": "A fan-made tool for creating custom team members for the Golden Lap racing game",
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "npx serve out",
    "lint": "next lint",
    "test:vitest": "vitest run",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:package": "npm run build && electron-packager . golden-lap-member-creator --platform=win32 --arch=x64 --out=dist --overwrite --icon=public/favicon.ico --ignore=\"src|public|\\.next|\\.git|README\\.md|LICENSE|tsconfig\\.json|postcss\\.config\\.mjs|components\\.json|\\.eslintrc\\.json|vitest\\.config\\.ts|scripts|\\.gitignore|node_modules/(?!electron).*\"",
    "preelectron:pack": "npm run build",
    "preelectron:dist": "npm run build"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mui/material": "^7.1.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-portal": "^1.1.9",
    "dexie": "^4.0.11",
    "jszip": "^3.10.1",
    "lucide-react": "^0.511.0",
    "next": "15.3.3",
    "postcss": "^8",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-easy-crop": "^5.4.2",
    "sonner": "^2.0.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-packager": "^17.1.2",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "9.29.0",
    "eslint-config-next": "15.3.3",
    "typescript": "^5",
    "vitest": "^3.1.4",
    "wait-on": "^8.0.3"
  },
  "build": {
    "appId": "com.goldenlap.membercreator",
    "productName": "Golden Lap Member Creator",
    "directories": {
      "output": "dist"
    },
    "npmRebuild": false,
    "files": [
      "out/**/*",
      "electron/**/*",
      "package.json",
      "!node_modules/**/*"
    ],
    "nodeGypRebuild": false,
    "extraResources": [
      {
        "from": "public/assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/favicon.ico",
      "category": "public.app-category.games"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.ico",
      "category": "Game"
    }
  }
}
